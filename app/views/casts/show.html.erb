<p id="notice"><%= notice %></p>

<%= image_tag @cast.avatar(:medium) %>

<p>
  <strong>Name:</strong>
  <%= @cast.name %>
</p>

<p>
  <strong>Surname:</strong>
  <%= @cast.surname %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @cast.bio %>
</p>

<p>
  <%= form_for(@comment) do |f| %>
    <%= f.label :comment %><br>
    <%= f.text_field :comment %>
    <%= f.hidden_field :commentable_id, value: @cast.id %>
    <%= f.hidden_field :commentable_type, value: "Cast" %>
    <%= f.submit %>
  <%end%>
</p>


<h1> Comments </h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cast.comments.each do |comment| %>
      <tr>
        <td><%= comment.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if can? :manage, @cast %>
  <%= link_to 'Edit', edit_cast_path %>
<% end %>

<%= link_to 'Back', casts_path %>
